  <li><%= link_to "Home", root_path %></li>
  <li><%= link_to "Charts", charts_path %></li>
  <li><%= link_to 'Weather', charts_weather_path %></li>
  <li class="active"><%= @title %></li>
</ol>
<% end %>

<div class="page-header">
  <h1>Weather</h1>
</div>

<ul class="nav nav-tabs">
  <li role="presentation" class="<%= 'active' if action?('charts/weather', 'totals') %>"><%= link_to 'Totals', charts_weather_totals_path %></li>
  <li role="presentation" class="<%= 'active' if action?('charts/weather', 'frost_days') %>"><%= link_to 'Frost Days', charts_weather_frost_days_path %></li>
</ul>
