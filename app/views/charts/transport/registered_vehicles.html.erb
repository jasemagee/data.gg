<%=  render  'head'  %>

<div  id="container_transport_registered_vehicles"  style="min-width:  310px;  height:  500px;  margin:  0  auto"></div>

<p>Source:  <a  href="http://www.gov.gg/pru">gov.gg</a></p>

<%=  javascript_tag  do  %>
$(function()  {
    initPage();
});
$(window).bind('page:change',  function()  {
    initPage();
});

function  initPage()  {
        $('#container_transport_registered_vehicles').highcharts({
                chart:  {
                        type:  'line'
                },
                title:  {
                        text:  '<%=  @title  %>'
                },
                xAxis:  {
                        allowDecimals:  false,
                        categories:  <%=  @labels.to_json.html_safe  %>,
                        title:  {
                                text:  'Year'
                        }
                },
                yAxis:  {
                        allowDecimals:  false,
                        title:  {
                                text:  'Amount'
                        }
                },
                series:  [{
                        name:  'Motor  Vehicles  Private',
                        data:  <%=  @vehicle_private.to_json.html_safe  -%>
                },
                {
                        name:  'Motor  Vehicles  Commercial',
                        data:  <%=  @vehicle_commerical.to_json.html_safe  -%>
                },
                {
                        name:  'Motor  Cycles',
                        data:  <%=  @motorbike.to_json.html_safe  -%>
                }]
        });
}
<%  end  %>
