<%= render 'head' %>

<div id="container_energy_electricity_consumption" style="min-width: 310px; height: 500px; margin: 0 auto"></div>

<p>Source: <a href="http://www.gov.gg/pru">gov.gg</a></p>

<%= javascript_tag do %>
$(function() {
  initPage();
});
$(window).bind('page:change', function() {
  initPage();
});

function initPage() {
    $('#container_energy_electricity_consumption').highcharts({
        chart: {
            type: 'line'
        },
        title: {
            text: '<%= @title %>'
        },
        xAxis: {
            allowDecimals: false,
            categories: <%= @labels.to_json.html_safe %>,
            title: {
                text: 'Year'
            }
        },
        yAxis: {
            allowDecimals: false,
            title: {
                text: 'Number of units (GWh)'
            }
        },
        series: [{
            name: 'Domestic',
            data: <%= @domestic.to_json.html_safe -%>
        },
        {
            name: 'Commerical',
            data: <%= @commerical.to_json.html_safe -%>
        }]
    });
}
<% end %>
